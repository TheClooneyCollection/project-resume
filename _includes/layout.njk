{% set currentEnvironment = environment or 'development' %}
{% set umami = umamiTracking or {} %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=860, initial-scale=1, maximum-scale=5, minimum-scale=0.25, user-scalable=yes">
    <title>{{ cv.name }} - CV</title>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/display.css">
    <link rel="stylesheet" href="/css/sections.css">
    <link rel="stylesheet" href="/css/print.css">
    {% if currentEnvironment == 'production' and umami.enabled %}
    <script defer src="{{ umami.scriptSrc }}" data-website-id="{{ umami.websiteId }}"></script>
    {% endif %}
</head>
<body>
    <div class="download-actions">
        <a class="download-link" href="/">View responsive resume</a>
        {% if currentEnvironment != 'production' %}
        <a class="download-link" href="/resume.pdf">Download PDF</a>
        {% endif %}
    </div>
    <div class="page">
        {{ content | safe }}
    </div>
</body>
</html>
