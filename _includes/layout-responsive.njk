{% set currentEnvironment = environment or 'development' %}
{% set umami = umamiTracking or {} %}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ cv.name }} - Responsive CV</title>
  <link rel="stylesheet" href="/css/resume-responsive.css">
  {% if currentEnvironment == 'production' and umami.enabled %}
  <script defer src="{{ umami.scriptSrc }}" data-website-id="{{ umami.websiteId }}"></script>
  {% endif %}
</head>
<body>
  <div class="page-shell">
    {% if currentEnvironment != 'production' %}
    <header class="top-bar">
      <div class="top-bar__links">
        <a class="download-link" href="/resume.pdf">Download PDF</a>
        <a class="original-link" href="/print_preview/">PDF layout view</a>
      </div>
    </header>
    {% endif %}
    <main class="page-content">
      {{ content | safe }}
    </main>
    {% if cv.contact and cv.contact.githubRepo %}
    <footer class="page-shell__repo">
      <a class="repo-link" href="{{ cv.contact.githubRepo }}" target="_blank" rel="noopener">
        View this project on GitHub
      </a>
    </footer>
    {% endif %}
  </div>
</body>
</html>
